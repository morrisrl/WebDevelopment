<?
   if (isset ($_REQUEST["teller"])){
      $counter = $_REQUEST["teller"];
   }
   else {
      $counter -= 1;
   }
 ?>
<html>
  <head>
    <title>Stage One</title>
  </head>
  <body>
    <form>
      Your counter is: <?=$counter + 1?> <br>
      <input type=submit name=action value=Proceed>
      <input type=hidden name=teller value="<?=$counter+1?>">
    </form>
  </body>
</html>
